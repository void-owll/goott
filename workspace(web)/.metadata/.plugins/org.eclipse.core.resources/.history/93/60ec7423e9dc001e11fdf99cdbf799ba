<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	// [문제] 키보드로 두 수와 연산자를 입력 받아서 연산자에 해당하는 함 수를 호출하여 연산 결과를 화면에 보여주세요.
	function plus(a, b){
		document.write(`두 수의 합은 ${a + b} 입니다`);
	}
	function minus(a, b){
		document.write(`두 수의 차는 ${a - b} 입니다`);
	}
	function multiple( a,  b){
		document.write(`두 수의 곱은 ${a * b} 입니다`);
	}
	function div( a, b){
		document.write(`두 수의 나누기는 ${(a / b).toFixed(3)} 입니다`);
	}
	function mod( a, b){
		document.write(`두 수의 나머지는 ${a % b} 입니다`);
	}
	
	
	
	
	
	let a = Number(prompt("첫 번째 수를 입력하세요"));
	let operator = prompt("연산자를 입력하세요");
	let b = Number(prompt("두 번째 수를 입력하세요"));

	
	
	switch(operator){
	case "+": {
		plus(a, b);
		break;
	}
	case "-": {
		minus(a, b);
		break;
	}
	case "*": {
		multiple(a, b);
		break;
	}
	case "/": {
		div(a, b);
		break;
	}
	case "%": {
		mod(a, b);
		break;
	}
	default:
		alert("잘못된 연산자입니다.");
	}

	
	
	

</script>
</head>
<body>

</body>
</html>